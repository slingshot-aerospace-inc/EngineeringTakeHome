{
  "name": "takehome-backend",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "dev": "ts-node-dev -r dotenv/config src/index.ts",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "node -r dotenv/config dist/index.js",
    "dist-typeorm": "node ./node_modules/.bin/typeorm --config dist/ormconfig",
    "dist-typeorm:drop": "node ./node_modules/.bin/typeorm --config dist/ormconfig schema:drop",
    "dist-typeorm:migration": "node ./node_modules/.bin/typeorm --config dist/ormconfig migration:run",
    "typeorm": "ts-node ./node_modules/.bin/typeorm --config src/ormconfig",
    "typeorm:drop": "ts-node ./node_modules/.bin/typeorm --config src/ormconfig schema:drop",
    "typeorm:migration": "ts-node ./node_modules/.bin/typeorm --config src/ormconfig migration:run",
    "resetDB": "npm run typeorm:drop && npm run typeorm:migration && npm run seed:run",
    "prettier": "prettier --write \"**/*.{js,ts,tsx}\" --config .prettierrc",
    "lint": "tsc --noEmit && eslint . --ext ts,tsx --max-warnings=0",
    "lint-init": "tsc --noEmit && eslint --init"
  },
  "author": "",
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && pretty-quick --staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "src/schema/.*/entity\\.ts",
      "src/schema/.*/type-defs\\.ts",
      "src/database/migrations/.*\\.ts",
      "src/ormconfig.*ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/src/__tests__/utils/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 50,
        "lines": 48,
        "statements": 50
      }
    }
  },
  "jest-junit": {
    "outputDirectory": "./coverage/junit",
    "outputName": "junit.xml"
  },
  "dependencies": {
    "apollo-server-core": "^3.3.0",
    "apollo-server-express": "^3.3.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "graphql": "^15.5.3",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.37",
    "typeorm-naming-strategies": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
